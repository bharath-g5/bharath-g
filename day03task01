namespace day03_task01
{
    class Class1
    {
        private static void Main(string[] args)
        {
            Console.WriteLine("Enter the action to be performed");
            Console.WriteLine("Press 1 for Addition");
            Console.WriteLine("Press 2 for Subtraction");
            Console.WriteLine("Press 3 for Multiplication");
            Console.WriteLine("Press 4 for Division \n");
            int action = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter 1st input");
            int input_1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter 2nd input");
            int input_2 = Convert.ToInt32(Console.ReadLine());
            int result = 0;
            switch (action)
            {
                case 1:
                    {
                        static int Addition(int input_1, int input_2)
                        {
                            int result = input_1 + input_2;
                            return result;
                        }
                        result = Addition(input_1, input_2);
                        break;
                    }
                case 2:
                    {
                         static int Subtraction(int input_1, int input_2)
                        {
                            int result = input_1 - input_2;
                            return result;
                        }
                        result = Subtraction(input_1, input_2);
                        break;
                    }
                case 3:
                    {
                        static int Multiplication(int input_1, int input_2)
                        {
                            int result = input_1 * input_2;
                            return result;
                        }
                        result = Multiplication(input_1, input_2);
                        break;
                    }
                case 4:
                    {
                        static int Division(int input_1, int input_2)
                        {
                            int result = input_1 / input_2;
                            return result;
                        }
                        result = Division(input_1, input_2);
                        break;
                    }
                default:
                    Console.WriteLine("Wrong action!! try again");
                    break;
            }
            Console.WriteLine("The result is {0}", result);
            Console.WriteLine(" do you want to continue yes/no ");
            string s = Console.ReadLine();
            while (s != "no")
            {
                Console.WriteLine("Enter the action to be performed");
                Console.WriteLine("Press 1 for Addition");
                Console.WriteLine("Press 2 for Subtraction");
                Console.WriteLine("Press 3 for Multiplication");
                Console.WriteLine("Press 4 for Division \n");
                int action1 = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("Enter 1st input");
                int input1 = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("Enter 2nd input");
                int input2 = Convert.ToInt32(Console.ReadLine());
                int result1 = 0;
                switch (action)
                {
                    case 1:
                        {
                            static int Addition(int input1, int input2)
                            {
                                int result1 = input1 + input2;
                                return result1;
                            }
                            result1 = Addition(input1, input2);
                            break;
                        }
                    case 2:
                        {
                            static int Subtraction(int input1, int input2)
                            {
                                int result1 = input1 - input2;
                                return result1;
                            }
                            result1 = Subtraction(input1, input2);
                            break;
                        }
                    case 3:
                        {
                            static int Multiplication(int input1, int input2)
                            {
                                int result1 = input1 * input2;
                                return result1;
                            }
                            result1 = Multiplication(input1, input2);
                            break;
                        }
                    case 4:
                        {
                            static int Division(int input1, int input2)
                            {
                                int result1 = input1 / input2;
                                return result1;
                            }
                            result1 = Division(input1, input2);
                            break;
                        }
                    default:
                        Console.WriteLine("Wrong action!! try again");
                        break;
                }
                Console.WriteLine("The result is {0}", result);
                Console.WriteLine(" do you want to continue yes/no ");
                string s1 = Console.ReadLine();
            }
        }
       
    }
    
}
